{
  "oneOf": [
    {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "NASInput",
      "type": "object",
      "properties": {
        "subject": {
          "type": "string",
          "minLength": 1,
          "description": "The main subject or task context for the agent."
        },
        "type": {
          "type": "string",
          "enum": [
            "classification",
            "generation",
            "retrieval",
            "planning",
            "execution"
          ],
          "description": "Specifies what kind of NAS operation is requested."
        },
        "memoryType": {
          "type": "string",
          "enum": ["short_term", "long_term", "episodic"],
          "description": "Defines the memory scope to use for this request."
        },
        "payload": {
          "type": "object",
          "description": "The core input data for the NAS logic.",
          "additionalProperties": true
        }
      },
      "required": ["subject", "type", "memoryType", "payload"],
      "additionalProperties": false
    }
  ]
}
