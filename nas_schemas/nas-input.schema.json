{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Nova Agent/Tool Standard (NAS) - Input",
  "type": "object",
  "required": ["id", "payload"],
  "properties": {
    "id": {
      "type": "string",
      "description": "Agent ID or Tool ID depending on context"
    },
    "client_id": {
      "type": "string",
      "description": "Required for agents, optional for tools"
    },
    "context": {
      "type": "object",
      "description": "Required for agents, optional for tools",
      "required": ["memory", "tools", "vector_sources"],
      "properties": {
        "memory": { "type": "object" },
        "tools": { "type": "array", "items": { "type": "string" } },
        "vector_sources": { "type": "array", "items": { "type": "string" } }
      }
    },
    "payload": {
      "type": "object",
      "required": ["input_text", "metadata"],
      "properties": {
        "input_text": {
          "type": "string",
          "description": "Query, instruction, or task"
        },
        "metadata": {
          "type": "object",
          "required": ["channel", "timestamp", "language"],
          "properties": {
            "channel": { "type": "string" },
            "timestamp": { "type": "string", "format": "date-time" },
            "language": { "type": "string" }
          }
        },
        "args": {
          "type": "object",
          "description": "Tool arguments, optional for agents",
          "additionalProperties": true
        }
      }
    }
  }
}
