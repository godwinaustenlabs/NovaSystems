{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Nova Agent/Tool Standard (NAS) - Output",
  "type": "object",
  "required": ["status", "id"],
  "properties": {
    "status": {
      "type": "string",
      "enum": ["success", "error"],
      "description": "Execution result"
    },
    "id": {
      "type": "string",
      "description": "Agent ID or Tool ID depending on context"
    },
    "response": {
      "type": "object",
      "description": "Agent-specific or tool-specific output data when status=success",
      "additionalProperties": true
    },
    "logs": {
      "type": "object",
      "properties": {
        "tokens_used": { "type": "integer" },
        "execution_time_ms": { "type": "integer" }
      }
    },
    "error": {
      "type": "object",
      "properties": {
        "code": { "type": "string" },
        "message": { "type": "string" }
      }
    }
  }
}
